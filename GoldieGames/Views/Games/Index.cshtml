@{
    ViewData["Title"] = "Home Page";
}

<h2>New and Upcoming!</h2>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ssbgdame1.png" alt="Dungeon" class="img-responsive" title="Dungeon" />

        </div>
        <div class="item">
            <img src="~/images/ssbdgame2.png" alt="Jinx" class="img-responsive" title="Jinx" />

        </div>
        <div class="item">
            <img src="~/images/ssbdgame3.png" alt="Fishing Camp" class="img-responsive" title="Fishing Camp" />

        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr>
<h2>Top 3 Games For Today</h2>
<img src="~/images/bdgame1.png" alt="Monopoly" class="img-responsive" title="Monopoly" />
<img src="~/images/bdgame2.jpg" alt="Game of Life" class="img-responsive" title="Game of Life" />
<img src="~/images/bdgame3.png" alt="Battleship" class="img-responsive" title="Battleship" />
