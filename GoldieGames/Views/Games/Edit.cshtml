
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BoardGame

<h2>Edit Board Game</h2>
<div>
    <div>
        <h2>@Model.Title</h2>
        <h1>@Model.Price.ToString("c")</h1>
    </div>
    <form id="@Model.BoardGameID" asp-action="EditBoardGame" asp-controller="Games" asp-for="BoardGameID">
        <h3> @Model.Seller</h3>
        <h3>@Model.Genre</h3>
        <button type="submit">Save</button>
        <button type="button" onclick="window.location.href='../Games/ItemsList'">Cancel</button>
    </form>

</div>
