@model BoardGame
@{
    ViewData["Title"] = "Added";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <h3>Following game has been added.</h3>
        <table class="table table-bordered table-striped">


            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>@Model.Category</td>
            </tr>
        </table>

    </div>

</div>

